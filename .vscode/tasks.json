{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/opt/homebrew/bin/g++-14",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}/a.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "RunExecutable and delete",
      "command": "bash",
      "args": ["-c", "\"${fileDirname}/a.out && rm ${fileDirname}/a.out && rm -rf ${fileDirname}/a.out.dSYM\""],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "dependsOn": "C/C++: g++ build active file",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Echo Hello",
      "command": "echo",
      "args": ["Hello"],
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}
